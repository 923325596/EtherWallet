<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.vikulin.etherwallet.DrawerActivity"
    tools:showIn="@layout/app_bar_drawer_w">

        <org.vikulin.etherwallet.view.UploadWebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@color/colorDelimiter"
            android:dividerHeight="1dp"
            android:background="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/button"
                    android:clickable="true"
                    android:onClick="onClickWalletList">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:scaleType="fitCenter"/>
                        <TextView android:id="@+id/main_generateWallet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/primary_text"
                            android:gravity="center_vertical"
                            android:textAlignment="gravity"
                            android:textSize="16dp"
                            android:textAllCaps="true"
                            android:text="@string/wallets"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/button"
                    android:clickable="true"
                    android:onClick="onClickSendEther">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/main_sendEther"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/primary_text"
                            android:gravity="center_vertical"
                            android:textAlignment="gravity"
                            android:textSize="16dp"
                            android:textAllCaps="true"
                            android:text="@string/sendEther"
                            />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/button"
                    android:clickable="true"
                    android:onClick="onClickBackupPkToEmail">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/main_sendEtherToEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/primary_text"
                            android:gravity="center_vertical"
                            android:textAlignment="gravity"
                            android:textSize="16dp"
                            android:textAllCaps="true"
                            android:text="@string/backupPkToEmail"
                            />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/button"
                    android:clickable="true"
                    >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/main_messages"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/secondary_text"
                            android:gravity="center_vertical"
                            android:textAlignment="gravity"
                            android:textSize="16dp"
                            android:textAllCaps="true"
                            android:text="@string/messages"
                            />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/button"
                    android:clickable="true"
                    android:onClick="onClickMainReceivePayment">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/main_receivePayment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/primary_text"
                            android:gravity="center_vertical"
                            android:textAlignment="gravity"
                            android:textSize="16dp"
                            android:textAllCaps="true"
                            android:text="@string/receivePayment"
                            />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/button"
                    android:clickable="true"
                    android:onClick="onClickContract">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/main_deployContract"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/primary_text"
                            android:gravity="center_vertical"
                            android:textAlignment="gravity"
                            android:textSize="16dp"
                            android:textAllCaps="true"
                            android:text="@string/deployContract"
                            />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/button"
                    android:clickable="true"
                    android:onClick="onClickTransactionList">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/main_viewTransactionList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/primary_text"
                            android:gravity="center_vertical"
                            android:textAlignment="gravity"
                            android:textSize="16dp"
                            android:textAllCaps="true"
                            android:text="@string/transactions"
                            />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/main_importKey"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/button"
                    android:clickable="true"
                    android:onClick="onClickMainImport">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/main_importKeyText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/primary_text"
                            android:gravity="center_vertical"
                            android:textAlignment="gravity"
                            android:textSize="16dp"
                            android:textAllCaps="true"
                            android:text="@string/importWalletKey"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/main_importKeyContent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:visibility="gone">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="@drawable/button"
                            android:clickable="true"
                            android:onClick="onClickKeyMainImport">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:padding="5dp"
                                    android:scaleType="fitCenter"/>
                                <TextView
                                    android:id="@+id/main_importKeyFileText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="sans-serif"
                                    android:text="@string/key_file"
                                    android:textColor="@color/primary_text"
                                    android:gravity="center_vertical"
                                    android:textAlignment="gravity"
                                    android:textSize="16dp"
                                    android:textAllCaps="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="@drawable/button"
                            android:clickable="true"
                            android:onClick="onClickQRCodeMainImport">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:padding="5dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/qr_code"/>
                                <TextView
                                    android:id="@+id/main_importQRCodeText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="sans-serif"
                                    android:text="@string/scanner_activity"
                                    android:textColor="@color/primary_text"
                                    android:gravity="center_vertical"
                                    android:textAlignment="gravity"
                                    android:textSize="16dp"
                                    android:textAllCaps="true"/>
                        </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/button"
                    android:clickable="true"
                    android:onClick="onClickBuy">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/main_buy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/primary_text"
                            android:gravity="center_vertical"
                            android:textAlignment="gravity"
                            android:textSize="16dp"
                            android:textAllCaps="true"
                            android:text="@string/buy"
                            />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/button"
                    android:clickable="true"
                    android:onClick="onClickSell">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/main_sell"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/primary_text"
                            android:gravity="center_vertical"
                            android:textAlignment="gravity"
                            android:textSize="16dp"
                            android:textAllCaps="true"
                            android:text="@string/sell"
                            />
                </LinearLayout>
        </LinearLayout>

</RelativeLayout>
